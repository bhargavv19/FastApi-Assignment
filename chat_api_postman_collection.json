{
    "info": {
        "name": "Chat API with Branching",
        "description": "A collection for testing the FastAPI Chat Application with Branching functionality",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "auth", "register"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"user1@example.com\",\n    \"username\": \"user1\",\n    \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "auth", "login"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"user1@example.com\",\n    \"password\": \"password123\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Chats",
            "item": [
                {
                    "name": "Create Chat",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/chats/create-chat",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "chats", "create-chat"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Direct Chat\",\n    \"type\": \"direct\",\n    \"participant_ids\": [\"{{user2_id}}\"]\n}"
                        }
                    }
                },
                {
                    "name": "Get My Chats",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/chats/my-chats",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "chats", "my-chats"]
                        }
                    }
                },
                {
                    "name": "Get Chat Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/chats/get-chat/{{chat_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "chats", "get-chat", "{{chat_id}}"]
                        }
                    }
                },
                {
                    "name": "Update Chat",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/chats/update-chat/{{chat_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "chats", "update-chat", "{{chat_id}}"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Updated Chat Name\",\n    \"participant_ids\": [\"{{user2_id}}\", \"{{user3_id}}\"]\n}"
                        }
                    }
                },
                {
                    "name": "Delete Chat",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/chats/delete-chat/{{chat_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "chats", "delete-chat", "{{chat_id}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Messages",
            "item": [
                {
                    "name": "Add Message",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/messages/add-message",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "messages", "add-message"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"chat_id\": \"{{chat_id}}\",\n    \"content\": \"Hello, this is a test message!\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Chat Messages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/messages/get-messages/{{chat_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "messages", "get-messages", "{{chat_id}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Branches",
            "item": [
                {
                    "name": "Create Branch",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/branches/create-branch",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "branches", "create-branch"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"chat_id\": \"{{chat_id}}\",\n    \"parent_message_id\": \"{{message_id}}\",\n    \"content\": \"This is a branch message\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Branch",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/branches/get-branch/{{chat_id}}/{{message_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "branches", "get-branch", "{{chat_id}}", "{{message_id}}"]
                        }
                    }
                },
                {
                    "name": "Get Active Branches",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/branches/get-active-branches/{{chat_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "branches", "get-active-branches", "{{chat_id}}"]
                        }
                    }
                },
                {
                    "name": "Get Thread",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/branches/get-thread/{{chat_id}}/{{message_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "branches", "get-thread", "{{chat_id}}", "{{message_id}}"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "access_token",
            "value": "your_access_token_here"
        },
        {
            "key": "chat_id",
            "value": "chat_uuid_here"
        },
        {
            "key": "message_id",
            "value": "message_uuid_here"
        },
        {
            "key": "user2_id",
            "value": "user2_uuid_here"
        },
        {
            "key": "user3_id",
            "value": "user3_uuid_here"
        }
    ]
} 